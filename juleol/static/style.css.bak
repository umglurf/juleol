/* These apply across all breakpoints because they are outside of a media query */
/* Make the labels light gray all caps across the board */
.result-table thead th,
.result-table tbody th .ui-table-cell-label,
.result-table tbody td .ui-table-cell-label {
    text-transform: uppercase;
    font-size: .7em;
    color: rgba(0,0,0,0.5);
    font-weight: normal;
}
/* White bg, large blue text for rank and title */
.result-table tbody th {
    font-size: 1.2em;
    background-color: #fff;
    color: #77bbff;
    text-align: center;
}
/*  Add a bit of extra left padding for the title */
.result-table tbody td.title {
    padding-left: .8em;
}
/* Add strokes */
.result-table thead th {
    border-bottom: 1px solid #d6d6d6; /* non-RGBA fallback */
    border-bottom: 1px solid rgba(0,0,0,.1);
}
.result-table tbody th,
.result-table tbody td {
    border-bottom: 1px solid #e6e6e6; /* non-RGBA fallback  */
    border-bottom: 1px solid rgba(0,0,0,.05);
}
/*  Custom stacked styles for mobile sizes */
/*  Use a max-width media query so we don't have to undo these styles */
@media (max-width: 60em) {
    .result-table thead {
      counter-reset: number;
    }
    /*  Negate the margin between sections */
    .result-table tbody th {
        margin-top: 0;
        text-align: left;
    }
    .result-table tbody td.title:before {
      counter-increment: number;
      content: counter(number) " ";
    }
    /*  White bg, large blue text for rank and title */
    .result-table tbody th,
    .result-table tbody td.title {
        display: block;
        font-size: 1.2em;
        line-height: 110%;
        padding: .5em .5em;
        background-color: #fff;
        color: #77bbff;
        -moz-box-shadow: 0 1px 6px rgba(0,0,0,.1);
        -webkit-box-shadow: 0 1px 6px rgba(0,0,0,.1);
        box-shadow: 0 1px 6px rgba(0,0,0,.1);
    }
    /*  Hide labels for rank and title */
    .result-table tbody th .ui-table-cell-label,
    .result-table tbody td.title .ui-table-cell-label {
        display: none;
    }
    /*  Position the title next to the rank, pad to the left */
    .result-table tbody td.title {
        margin-top: -2.1em;
        padding-left: 2.2em;
        border-bottom: 1px solid rgba(0,0,0,.15);
    }
    /*  Make the data bold */
    .result-table th,
    .result-table td {
        font-weight: bold;
    }
    /* Make the label elements a percentage width */
    .result-table td .ui-table-cell-label,
    .result-table th .ui-table-cell-label {
        min-width: 20%;
    }
}
/* Media query to show as a standard table at wider widths */
@media ( min-width: 60em ) {
    /* Show the table header rows */
    .result-table td,
    .result-table th,
    .result-table tbody th,
    .result-table tbody td,
    .result-table thead td,
    .result-table thead th {
        display: table-cell;
        margin: 0;
    }
    /* Hide the labels in each cell */
    .result-table td .ui-table-cell-label,
    .result-table th .ui-table-cell-label {
        display: none;
    }
}
/* Hack to make IE9 and WP7.5 treat cells like block level elements */
/* Applied in a max-width media query up to the table layout breakpoint so we don't need to negate this */
@media ( max-width: 60em ) {
    .result-table td,
    .result-table th {
        width: 100%;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        float: left;
        clear: left;
    }
}

.detail-result-list {
  margin: 1em;
}
.detail-result-list thead th,
.detail-result-list tbody tr:last-child {
    border-bottom: 1px solid #d6d6d6; /* non-RGBA fallback */
    border-bottom: 1px solid rgba(0,0,0,.1);
}
.detail-result-list tbody th,
.detail-result-list tbody td {
    border-bottom: 1px solid #e6e6e6; /* non-RGBA fallback  */
    border-bottom: 1px solid rgba(0,0,0,.05);
}
.detail-result-list tbody tr:last-child th,
.detail-result-list tbody tr:last-child td {
    border-bottom: 0;
}
.detail-result-list tbody tr:nth-child(odd) td,
.detail-result-list tbody tr:nth-child(odd) th {
    background-color: #eeeeee; /* non-RGBA fallback  */
    background-color: rgba(0,0,0,.04);
}
.detail-result-list tbody tr td.deviation {
  text-align: right;
}
